<script>
	let sketch = function (p) {
		p.setup = function () {
			p.createCanvas(320, 200);
			p.background(0, 0, 255);
		};

		p.draw = function () {
			if (p.mouseIsPressed) {
				p.fill(0);
			} else {
				p.fill(255);
			}
			p.ellipse(p.mouseX, p.mouseY, 80, 80);
		};
	};
	new p5(sketch, window.document.getElementById("container"));
</script>

